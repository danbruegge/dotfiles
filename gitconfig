[color]
    ui = auto

[format]
    pretty = oneline

[core]
    excludesfile = ~/.gitignore
    pager = less -r
    editor = nvim
    logAllRefUpdates = true

[diff]
    algorithm = patience
    colorMoved = default

[alias]
    st = status -s
    edit = config --global -e # open gitconfig in editor

    # branch
    br = branch
    bra = branch --all
    bd = "!bd() { git branch | rg ${1}; }; bd"
    bdd = "!bdd() { git branch | rg ${1} | xargs git branch -d; }; bdd"
    bdf = "!bdf() { git branch | rg ${1} | xargs git branch -D; }; bdf"

    # tags
    tl = tag -l -n

    # checkout
    c = !git branch | fzf --header Checkout | xargs git switch
    co = switch
    cob = switch -c
    cof = checkout -f

    # diff
    d = diff
    ds = diff --stat
    dlc = diff --cached HEAD^ # diff last commit
    dt = difftool

    # add
    aa = add .
    ap = add -p

    # commit
    ci = commit
    cam = commit --amend
    cia = commit -am
    cim = commit -m

    # log
    l = log --decorate --pretty=oneline --abbrev-commit --graph
    lt = log -10 HEAD # last ten
    ls = log --stat # log stat
    lst = log -10 --stat # log status last ten
    last = log --pretty -1 HEAD

    # stash
    sa = stash apply
    sd = stash drop
    sl = stash list
    sp = stash pop
    ss = stash push

    # reset
    undo = reset HEAD^
    kill = reset --hard HEAD^

    # unstage
    unstage = reset HEAD

    # rebase
    ra = rebase --abort
    rc = rebase --continue
    rs = rebase --skip

    # worktree
    wt = worktree
    wa = worktree add
    wr = worktree remove
    wl = worktree list

    # push current branch
    pcb = "!git push origin HEAD"
    pcbf = "!git push origin HEAD --force-with-lease"

    # clean up old remote branches
    rpo = remote prune origin

    # list info
    i = !echo "----" && \
        echo "= Remote update" && \
        git remote update && \
        echo "----" && \
        echo "= Show master diff" && \
        git show-branch *master && \
        echo "----" && \
        echo "= Branch" && \
        echo "----" && \
        git branch && \
        echo "----" && \
        echo "= Last ten" && \
        echo "----" && \
        git log -10 HEAD && \
        echo "----" && \
        echo "= Status" && \
        echo "----" && \
        git status -s

    # list aliases
    alias = "!git config -l | grep alias | cut -c 7-"

    mt = mergetool
    meld = mergetool --tool meld

[push]
    default = simple

[merge]
    conflictstyle = diff3
    tool = nvim

[mergetool "nvim"]
    cmd = nvim -f -c \"Gdiffsplit!\" \"$MERGED\"

# automatically launch merge tool without displaying a prompt
[mergetool]
  prompt = false

[fetch]
    prune = true

[user]
    useConfigOnly = true

[pull]
    ff = only

[init]
    defaultBranch = main

[pager]
    blame = delta
    diff = delta
    log = delta
    reflog = delta
    show = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    features = line-numbers decorations
    whitespace-error-style = 22 reverse

[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
