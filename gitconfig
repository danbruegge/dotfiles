[color]
    ui = True

[color "branch"]
    current = yellow bold
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow bold
    changed = green bold
    untracked = cyan bold

[format]
    pretty = oneline

[include]
    path = ~/.dotfiles/custom/gitconfig_user

[core]
    excludesfile = ~/dotfiles/custom/gitignore_global
    pager = less -r
    editor = nvim

[diff]
    algorithm = patience

[alias]
    st = status -s
    ec = config --global -e # open gitconfig in editor

    # branch
    bra = branch --all

    # tags
    tl = tag -l -n

    # checkout
    com = checkout master
    cob = checkout -b
    cof = checkout -f

    # diff
    d = diff --word-diff
    ds = diff --stat
    dlc = diff --cached HEAD^ # diff last commit

    # add
    aa = add .

    # commit
    cim = commit -m
    cia = commit -am
    cam = commit --amend

    # merge
    mm = merge master

    # log
    l = log
    lt = log -10 HEAD # last ten
    ls = log --stat # log stat
    lst = log -10 --stat # log status last ten
    last = log --pretty -1 HEAD

    # stash
    ss = stash save
    sp = stash pop
    sa = stash apply
    sl = stash list

    # reset
    undo = reset HEAD^
    kill = reset --hard HEAD^

    # push current branch
    pcb = "!git push -u origin $(git symbolic-ref --short HEAD)"

    # clean up old remote branches, need <remote-name>
    rp = remote prune

    # list info
    i = !echo "----" && \
        echo "= Remote update" && \
        git remote update && \
        echo "----" && \
        echo "= Show master diff" && \
        git show-branch *master && \
        echo "----" && \
        echo "= Branch" && \
        echo "----" && \
        git branch && \
        echo "----" && \
        echo "= Last ten" && \
        echo "----" && \
        git log -10 HEAD && \
        echo "----" && \
        echo "= Status" && \
        echo "----" && \
        git status -s

    # show git notes
    gn = "!less ~/Cloud/Notes/git.md"

    # list aliases
    la = "!git config -l | grep alias | cut -c 7-"

[push]
    default = simple

[merge]
    conflictstyle = diff3
    tool = meld
