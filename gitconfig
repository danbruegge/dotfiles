[color]
    ui = True

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[format]
    pretty = oneline

[include]
    path = ~/.dotfiles/custom/gitconfig_user

[core]
    excludesfile = ~/dotfiles/custom/gitignore_global
    pager = less -r
    editor = nvim

[diff]
    algorithm = patience

[alias]
    st = status -s
    ec = config --global -e # open gitconfig in editor

    # branch
    br = branch

    # checkout
    cm = checkout master
    cob = checkout -b

    # diff
    d = diff --word-diff
    ds = diff --stat
    dlc = diff --cached HEAD^ # diff last commit

    # commit
    cim = commit -m
    cia = commit -am

    # merge
    mm = merge master

    # log
    l = log
    lt = log -10 HEAD # last ten
    ls = log --stat # log stat
    lst = log -10 --stat # log status last ten
    last = log --pretty -1 HEAD

    # stash
    ss = stash save
    sp = stash pop
    sa = stash apply
    sl = stash list

    # reset
    undo = reset HEAD^
    kill = reset --hard HEAD^

    # push current branch
    pcb = "!git push -u origin $(git symbolic-ref --short HEAD)"

    # list info
    i = !echo "----" && \
        echo "= Branch" && \
        echo "----" && \
        git br && \
        echo "----" && \
        echo "= Last ten" && \
        echo "----" && \
        git lt && \
        echo "----" && \
        echo "= Status" && \
        echo "----" && \
        git st

    # list aliases
    la = "!git config -l | grep alias | cut -c 7-"

[push]
    default = simple

[merge]
    conflictstyle = diff3
    tool = meld
[gitreview]
	remote = origin
