[color]
    ui = True

[color "branch"]
    current = yellow bold
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow bold
    changed = green bold
    untracked = cyan bold

[format]
    pretty = oneline

[include]
    path = ~/.dotfiles/custom/gitconfig_user

[core]
    excludesfile = ~/dotfiles/custom/gitignore_global
    pager = less -r
    editor = nvim
    logAllRefUpdates = true

[diff]
    algorithm = patience

[alias]
    st = status -s
    edit = config --global -e # open gitconfig in editor

    # branch
    br = branch
    bra = branch --all

    # tags
    tl = tag -l -n

    # checkout
    co = checkout
    cob = checkout -b
    cof = checkout -f

    # diff
    d = diff --word-diff
    ds = diff --stat
    dlc = diff --cached HEAD^ # diff last commit
    dt = difftool

    # add
    aa = add .
    ap = add -p

    # commit
    ci = commit
    cam = commit --amend
    cia = commit -am
    cim = commit -m

    # log
    l = log
    lt = log -10 HEAD # last ten
    ls = log --stat # log stat
    lst = log -10 --stat # log status last ten
    last = log --pretty -1 HEAD

    # stash
    sa = stash apply
    sl = stash list
    sp = stash pop
    ss = stash save

    # reset
    undo = reset HEAD^
    kill = reset --hard HEAD^

    # rebase
    ra = rebase --abort
    rc = rebase --continue
    rs = rebase --skip

    # push current branch
    pcb = "!git push origin HEAD"
    pcbf = "!git push origin HEAD --force-with-lease"

    # clean up old remote branches
    rpo = remote prune origin

    # list info
    i = !echo "----" && \
        echo "= Remote update" && \
        git remote update && \
        echo "----" && \
        echo "= Show master diff" && \
        git show-branch *master && \
        echo "----" && \
        echo "= Branch" && \
        echo "----" && \
        git branch && \
        echo "----" && \
        echo "= Last ten" && \
        echo "----" && \
        git log -10 HEAD && \
        echo "----" && \
        echo "= Status" && \
        echo "----" && \
        git status -s

    # show git notes
    notes = "!less ~/Cloud/Notes/git.md"

    # list aliases
    alias = "!git config -l | grep alias | cut -c 7-"

    mt = mergetool
    meld = mergetool --tool meld

[push]
    default = simple

[merge]
    conflictstyle = diff3
    tool = vimdiff
