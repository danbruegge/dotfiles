#
# ~/.bashrc
#
[[ $- != *i* ]] && return

#--- PROMPT ---
PS1='\[\e[1;31m\][\u\[\e[0m\] \[\e[0;37m\]\W\[\e[0m\]\[\e[1;31m\]]\$\[\e[0m\] '

#--- ROOT ONLY ---
#------ pacman related ---
alias pacnew='find / -name *.pacnew'
alias pacsave='find / -name *.pacsave'
alias paccleanup='pacman -Rsn `pacman -Qdtq`'

#------ systemd things ---
alias list='systemctl list-units'
alias units='systemctl list-unit-files'
alias start='systemctl start'
alias restart='systemctl restart'
alias stop='systemctl stop'
alias enable='systemctl enable'
alias disable='systemctl disable'
alias status='systemctl status'
alias reboot='systemctl reboot'

#--- WLAN ---
alias scan='iw dev wlan0 scan | grep SSID'

#--- LOAD BASH COMMON ---
. /home/dan/.bashrc_common
