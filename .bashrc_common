#--- ALIAS ---
alias ls='ls -hH --color=auto'
alias lsal='ls -al'
alias vi='vim'
alias diff='colordiff'
alias grep='grep --color=auto'
alias df='df -h'
alias du='du -c -h'
alias mkdir='mkdir -p -v'
alias ping='ping -c 5'
alias bashrc='vim ~/.bashrc && . ~/.bashrc'
alias bashrc_common='vim ~/.bashrc_common && . ~/.bashrc'
alias reload='. ~/.bashrc'

#--- PYTHON-ALIAS ---
alias pyclean='find . -name "*.pyc" -delete'

#--- PHP-ALIAS ---
alias runphp='php -S localhost:8000'

#--- GIT-ALIAS ---
function gitsh()
{
    git checkout $2
    git merge $1
    git push origin $2
    git checkout $1
}
function gitll()
{
    git checkout $1
    git pull origin $1
    git checkout $2
    git merge $1
}

alias gti='git'
alias gitignore='vim .gitignore'

