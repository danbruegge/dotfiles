alias ll='ls -la'
alias lo='ls . | xargs -n1 basename' # list files without extra informations
alias loa='ls -a . | xargs -n1 basename'    # list 'all' files without extra 
                                            # informations
alias ..='cd ../'
alias ...='cd ../../'
alias ....='cd ../../../'
alias vi='vim'
alias diff='colordiff'
alias grep='grep --color=auto'
alias df='df -h'
alias du='du -ch'
alias mkdir='mkdir -pv'
alias ping='ping -c 5'
alias bashrc='vim ~/.bashrc && . ~/.bashrc'
alias bashrc_common='vim ~/.bashrc_common && . ~/.bashrc'
alias reload='. ~/.bashrc'
alias dotfiles='cd ~/.dotfiles'
alias editor='export EDITOR="vim"'

# set screensaver off #
alias soff='xset s off'
# set screensaver on #
alias son='xset s on'

# request a page with a ajax header (search engine testing) #
alias curlajax='curl -H "X-Requested-With: XMLHttpRequest"'
# get web server headers #
alias header='curl -I'

alias now='date +"%T"'

