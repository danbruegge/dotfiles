#--- ALIAS ---
alias ls='ls -hH --color=auto'
alias lsal='ls -al'
alias vi='vim'
alias diff='colordiff'
alias grep='grep --color=auto'
alias df='df -h'
alias du='du -c -h'
alias mkdir='mkdir -p -v'
alias ping='ping -c 5'
alias bashrc='vim ~/.bashrc && . ~/.bashrc'
alias bashrc_common='vim ~/.bashrc_common && . ~/.bashrc'
alias reload='. ~/.bashrc'

#--- GIT-ALIAS ---
function gitpush()
{
    git checkout $2
    git merge $1
    git push origin $2
    git checkout $1
}
function gitpull()
{
    git checkout $1
    git pull origin $1
    git checkout $2
    git merge $1
}

alias gitinfo='git remote -v && git branch -a -v && git status'
alias gitignore='vim .gitignore'

