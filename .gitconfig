[color]
    ui = True
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[format]
    pretty = oneline

[include]   
    path = ~/.gitconfig_user

[core]
    excludesfile = ~/.gitignore-global
	pager = less -r
    editor = vim

[alias]
    undo = reset --hard HEAD^
    info = git remote -v && git branch -a -v && git status
    ci = commit
    cia = commit -am
    st = status
    br = branch
    co = checkout
    df = diff
    lg = log

[push]
	default = simple
[merge]
	conflictstyle = diff3
    tool = meld
