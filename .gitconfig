[color]
    ui = True
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[format]
    pretty = oneline

[user]
	name = haengebruegge
	email = me@haengebruegge.de

[core]
    excludesfile = ~/.gitignore-global
	pager = less -r

[alias]
    undo=reset --hard
    i=git remote -v && git branch -a -v && git status
[push]
	default = simple
